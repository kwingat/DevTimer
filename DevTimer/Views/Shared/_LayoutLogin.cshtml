@model DevTimer.Models.LoginViewModel

@{
    Layout = "";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="/Content/Login-soft.css" rel="stylesheet"/>
    <style>
        body {
            background-image: url('../../Content/Img/flower.jpg');
            padding: 50px;
        }
    </style>

</head>
<body class="login">
    <div class="logo">
        <h2 style="font-weight: bold; color: #fff">kdub</h2>
    </div>
    <div class="content">
        @using (Html.BeginForm("Login", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "login-form", role = "form"}))
        {
            @Html.AntiForgeryToken()
            <h3 class="form-title">Login to your account</h3>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="alert alert-error hide">
                <button class="close" data-dismiss="alert"></button>
                <span>Enter any username and password</span>
            </div>

            <div class="control-group">
                @Html.LabelFor(m => m.Email, new {@class = "control-label visible-ie8 visible-ie9"})
                <div class="controls">
                    <div class="input-icon left">
                        <i class="fa fa-user"></i>
                        @Html.TextBoxFor(m => m.Email, new {@class = "m-wrap placeholder-no-fix"})
                        @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(m => m.Password, new {@class = "control-label visible-ie8 visible-ie9"})
                <div class="controls">
                    <div class="input-icon left">
                        <i class="fa fa-lock"></i>
                        @Html.PasswordFor(m => m.Password, new {@class = "m-wrap placeholder-no-fix"})
                        @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
            <div class="alert fade in login_alert"></div>
            <div class="form-actions">
                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
                <button type="submit" id="loginButton" class="btn btn-success pull-right">
                    Login
                    <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>
            <div class="forget-password"></div>
        }
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/site")
    <script src="~/Scripts/App/login.js"></script>
</body>
</html>
