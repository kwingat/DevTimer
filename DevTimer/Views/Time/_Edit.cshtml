@model DevTimer.Models.WorkEditViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h3 class="modal-title" id="myModalLabel">Edit Time Entry</h3>
</div>

@using (Html.BeginForm())
{
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div class="row-fluid">
            <div class="span12">
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                @Html.HiddenFor(m => m.ID)
                <div class="form-group">
                    @Html.LabelFor(m => m.Projects, new { @class = "control-label" })
                    <div class="controls">
                        @Html.DropDownListFor(m => m.ProjectID, Model.Projects, new { type = "text", @class = "span6 m-wrap", placeholder = "Choose a Project" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.WorkTypes, new { @class = "control-label" })
                    <div class="controls">
                        @Html.DropDownListFor(m => m.WorkTypeID, Model.WorkTypes, new { type = "text", @class = "span6 m-wrap", placeholder = "Choose a Work Type" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Comment, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextAreaFor(m => m.Comment, new { @class = "span6 m-wrap", rows = "3", style = "width: 95%" })
                    </div>
                </div>

                <div class="navbar-form">
                    Date:
                    <div class="input-group">
                        
                        @Html.TextBoxFor(m => m.Date, "{0:MM/dd/yyyy}", new {id = "date", @class = "form-control", @readonly = "readonly", style = "width:100px"})

                        <span class="input-group-addon btn btn-success"><i class="icon-calendar"></i></span>
                        
                        @Html.ValidationMessageFor(m => m.Date, "", new {@class = "text-danger"})
                    </div>
                    Time:
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.StartTime, "{0:HH:mm}", new { id = "startTime", @class = "form-control", @readonly = "readonly", style = "width:100px" })
                        <span class="input-group-addon btn btn-success" type="button" id="toggle-btnStart">
                            <i class="icon-time"></i>
                        </span>
                        @Html.ValidationMessageFor(m => m.StartTime, "", new { @class = "text-danger" })
                    </div>
                    <b>
                        <i class="fa fa-arrow-right"></i>
                    </b>

                    <div class="input-group">
                        @Html.TextBoxFor(m => m.EndTime, "{0:HH:mm}", new { id = "endTime", @class = "form-control", @readonly = "readonly", style = "width:100px" })
                        <span class="input-group-addon btn btn-success" type="button" id="toggle-btnEnd">
                            <i class="icon-time"></i>
                        </span>
                        @Html.ValidationMessageFor(m => m.EndTime, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-default" type="button" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-success">
            <i class="fa fa-clock-o"></i>
            &nbsp;Start
        </button>

        @*<input class="btn btn-primary" type="submit" value="Add" />*@
    </div>
}

<script>
    $(function() {
        $('#date').datepicker({
            autoclose: true,
            todayHighlight: true,
            format: 'mm/dd/yyyy'

        });

        $('#startTime').clockface({
            format: 'HH:mm',
            trigger: 'manual'
        });

        $('#toggle-btnStart').click(function(e) {
            e.stopPropagation();
            $('#startTime').clockface('toggle');
        });

        $('#endTime').clockface({
            format: 'HH:mm',
            trigger: 'manual'
        });

        $('#toggle-btnEnd').click(function(e) {
            e.stopPropagation();
            $('#endTime').clockface('toggle');
        });
    });
</script>